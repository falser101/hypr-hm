{
  "layer": "top",
  "position": "top",
  "height": 36,
  "width": "100%",
  "spacing": 4,
  "margin": "0 4px",
  "modules-left": ["hyprland/workspaces", "cpu", "memory", "network"],
  "modules-center": ["wlr/taskbar"],
  "modules-right": ["tray", "pulseaudio", "clock", "keyboard-state"],
  "hyprland/workspaces": {
    "format": "{icon}",
    "format-icons": {
      "1": "",
      "2": "",
      "3": "",
      "4": "",
      "5": "",
      "6": "",
      "7": "",
      "8": "",
      "9": "",
      "active": "●",
      "inactive": "○",
      "urgent": "⚠",
    },
    "sort-by-number": true,
    "persistent-workspaces": {
      "1": true,
      "2": true,
      "3": true,
      "4": true,
      "5": true,
      "6": true,
      "7": true,
      "8": true,
      "9": true,
    },
  },
  "cpu": {
    "format": " {usage}%",
    "tooltip": true,
    "tooltip-format": "CPU Usage:\n{usage}%",
    "interval": 2,
    "max-length": 10,
  },
  "memory": {
    "format": " {used}/{total} ({percentage}%)",
    "tooltip": true,
    "tooltip-format": "Memory Usage:\n{used}/{total} ({percentage}%)",
    "interval": 3,
    "max-length": 20,
  },
  "network": {
    "format-wifi": " {signalStrength}% {essid}",
    "format-ethernet": " {ipaddr}",
    "format-disconnected": "睊",
    "tooltip-format": "{ifname}: {ipaddr}/{cidr}\nRX: {rxBytesHuman}\nTX: {txBytesHuman}",
    "interval": 5,
    "max-length": 30,
  },
  "wlr/taskbar": {
    "icon-size": 16,
    "spacing": 8,
    "format": "{icon}",
    "tooltip-format": "{title}",
    "all-outputs": false,
    "filter": {
      "all": true,
      "minimized": false,
    },
    "on-click": "activate",
    "on-middle-click": "close",
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "婢 0%",
    "format-icons": {
      "headphones": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", "", ""],
    },
    "tooltip": true,
    "tooltip-format": "{desc}\nVolume: {volume}%",
    "scroll-step": 5,
    "on-click": "toggle-mute",
  },
  "battery": {
    "format": "{icon} {capacity}%",
    "format-charging": "🔌 {capacity}%",
    "format-full": "✅ 100%",
    "format-icons": ["", "", "", "", ""],
    "tooltip": true,
    "tooltip-format": "{time}",
    "interval": 30,
    "states": {
      "warning": 30,
      "critical": 15,
    },
  },
  "clock": {
    "format": " {:%H:%M}",
    "tooltip-format": "<big>{:%Y-%m-%d}</big>\n<tt>{calendar}</tt>",
    "interval": 60,
    "timezone": "Local",
  },
  "tray": {
    "icon-size": 16,
    "spacing": 8,
    "show-empty": false,
  },
  "keyboard-state": {
    "numlock": true, // 显示 NumLock 状态
    "capslock": true, // 显示 CapsLock 状态
    "scrolllock": false, // 不显示 ScrollLock 状态
    "format": "{name} {icon}", // 通用格式（若单独设置则覆盖此值）
    "format-icons": {
      "locked": "", // 锁定状态图标（可自定义）
      "unlocked": "", // 未锁定状态图标（可自定义）
    },
    "device-path": "/dev/input/event9",
    "binding-keys": [110, 12, 70], // 绑定的按键码（默认：NumLock/CapsLock/ScrollLock）
  },
}
