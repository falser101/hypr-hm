    # 边框（frame）
    frame_color = "#babbf1"         # lavender (active border in kitty)

    # 分隔线颜色（使用边框色）
    separator_color = frame

    # 高亮（如鼠标悬停）
    highlight = "#ca9ee6"           # mauve

    # 字体（推荐 Nerd Font 或等宽）
    font = JetBrainsMono Nerd Font 10

